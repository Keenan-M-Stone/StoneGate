[Unit]
Description=StoneGate Backend (WebSocket)
After=network.target

[Service]
Type=simple
EnvironmentFile=-/etc/stonegate/stonegate.env
WorkingDirectory=/opt/stonegate
ExecStart=/opt/stonegate/backend/StoneGate --port ${BACKEND_PORT:-8080} ${BACKEND_ARGS}
Restart=on-failure
RestartSec=1

[Install]
WantedBy=multi-user.target
